
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  senha   String
  habitos Habito[]
  eventos Evento[]
}

model Evento {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  data      DateTime
  horario   String   // Ex: "08:00"
  criadoEm  DateTime @default(now())
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
}


model Habito {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  dias       String[]        // Ex: ["Seg", "Qua"]
  criadoEm   DateTime        @default(now())
  userId     String          @db.ObjectId
  user       User            @relation(fields: [userId], references: [id])
  registros  HabitoRegistro[]
}

model HabitoRegistro {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  data     DateTime // Data em que o hábito foi concluído
  habitoId String   @db.ObjectId
  habito   Habito   @relation(fields: [habitoId], references: [id])
}
